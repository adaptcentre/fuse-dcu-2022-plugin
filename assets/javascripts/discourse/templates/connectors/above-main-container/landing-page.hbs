{{#if showPlugin}}

  <div>
    <img src="/plugins/fuse-dcu-2022-plugin/fuse/DCU_Fuse_Platform_Files.png" alt="" style="width:100%;">
  </div>

  <!-- COUNTDOWN -->
  {{#if showCountdown}}

  <div class="mt-3">
    <div class="fuse-section-header">
      <h2> Not long now </h2>
    </div>
    
    <div class="fuse-countdown-clock mt-1">
      <div class="time-wrapper days-wrapper">
        <div class="time">
          {{countdownDays}}
        </div>
        <div class="desc">
          {{countdownDaysText}}
        </div>
      </div>
    
      <div class="time-wrapper hours-wrapper">
        <div class="time">
          {{countdownHours}}
        </div>
        <div class="desc">
          {{countdownHoursText}}
        </div>
      </div>
    
      <div class="time-wrapper minutes-wrapper">
        <div class="time">
          {{countdownMinutes}}
        </div>
        <div class="desc">
          {{countdownMinutesText}}
        </div>
      </div>
    
      <div class="time-wrapper seconds-wrapper">
        <div class="time">
          {{countdownSeconds}}
        </div>
        <div class="desc">
          {{countdownSecondsText}}
        </div>
      </div>
    </div>
  </div>
  
  {{/if}}

  
  <div class="mt-3">
    <div class="fuse-section-header">
      <h2> Lorem Ipsum </h2>
    </div>
  </div>

  <div class="mt-3 mb-3">
    <div class="fuse-section-header">
      <h2> Schedule </h2>
    </div>

    <div class="fuse-event-wrapper mt-1">
      {{#each events as |event|}}
        <a class="fuse-event" href="/t/{{event.topicId}}">
          <div class="fuse-event-time">
            {{event.time.start}} - {{event.time.end}}
          </div>

          <div class="fuse-event-title">
            {{event.title}}
          </div>
          
          <div class="fuse-event-chairs">
            {{#each event.chairs as |chair|}}
              <div>{{chair}}</div>
            {{/each}}
          </div>
        </a>
      {{/each}}
    </div>
  </div>

{{/if}}
